PATH=$PATH:/opt/soundcloud
PATH=/opt/soundcloud:$PATH
PATH=/home/qlio/.composer/vendor/bin:$PATH

export LANG=en_US.UTF-8

# save history of all terminal
export PROMPT_COMMAND='history -a'

